#ifndef SEAMLESS_PROJECTED
#define SEAMLESS_PROJECTED 1

#include <osgEarth/Map>

#include <seamless/PatchSet>

namespace seamless
{
class Projected : public PatchSet
{
public:
    Projected(osgEarth::Map* map);
    virtual void fillPatch(const std::string& filename, Patch* patch,
                           PatchOptions* poptions);
    osgEarth::Map* getMap() const { return _map.get(); }
protected:
    osg::ref_ptr<osgEarth::Map> _map;
};
}
#endif
