#ifndef OSGEARTHFEATURES_FEATURE_COMPILER_H
#define OSGEARTHFEATURES_FEATURE_COMPILER_H 1

#include <osgEarthFeatures/Common>
#include <osgEarthFeatures/Feature>
#include <osgEarthFeatures/Session>
#include <osgEarthSymbology/Style>

namespace osgEarth { namespace Features
{
    using namespace osgEarth;
    using namespace osgEarth::Symbology;

    /**
     * Compiles a collection of features against a style.
     */
    class OSGEARTHFEATURES_EXPORT FeatureCompiler : public osg::Referenced
    {
    public:
        /** Constructs a new feature compile under the specified sesison. */
        FeatureCompiler( Session* session =0L );

        virtual ~FeatureCompiler() { }

    public:

        /** Compiles a collection of features into an OSG scene graph. */
        osg::Node* compile(
            const FeatureList&    features,
            const FeatureProfile* featureProfile,
            const Style*          style );

    protected:
        osg::ref_ptr<Session> _session;
    };

} } // namespace osgEarth::Features

#endif //OSGEARTHFEATURES_FEATURE_COMPILER_H
