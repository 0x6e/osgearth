#ifndef OSGEARTHFEATURES_SCATTER_MODEL_FILTER_H
#define OSGEARTHFEATURES_SCATTER_MODEL_FILTER_H 1

#include <osgEarthFeatures/Common>
#include <osgEarthFeatures/SubstituteModelFilter>

namespace osgEarth { namespace Features
{
    using namespace osgEarth;
    using namespace osgEarth::Symbology;

    /**
     * Feature filter that will scatter instances of an external model within
     * feature geometry.
     */
    class OSGEARTHFEATURES_EXPORT ScatterModelFilter : public SubstituteModelFilter
    {
    public:
        // Call this determine whether this filter is available.
        static bool isSupported() { return true; }

    public:
        /** Construct a new sub-model filter that will operate on the given style */
        ScatterModelFilter( const Style* style );

        /** Approximate instances per sqkm. */
        void setDensity( float value ) { _density = value; }
        float getDensity() const { return _density; }

    public:
        /** Processes a new feature list */
        virtual FilterContext push( FeatureList& input, const FilterContext& context );

    private:
        float _density;
        
        bool scatterGeometry(FeatureList& features, const FilterContext& context);
    };

} } // namespace osgEarth::Features

#endif // OSGEARTHFEATURES_SUBSTITUTE_MODEL_FILTER_H
