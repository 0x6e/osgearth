#ifndef OSGEARTHFEATURES_FEATURE_OP_FILTER_H
#define OSGEARTHFEATURES_FEATURE_OP_FILTER_H 1

#include <osgEarthFeatures/Common>
#include <osgEarthFeatures/Feature>
#include <osgEarthFeatures/Filter>
#ifdef OSGEARTH_HAVE_GEOS
#  include <geos/geom/Geometry.h>
#endif // OSGEARTH_HAVE_GEOS

using namespace osgEarth;

namespace osgEarthFeatures {

    class OSGEARTHFEATURES_EXPORT FeatureOpFilter
    {
    public:
        
        virtual FilterContext push( FeatureList& input, const FilterContext& context ) =0;

    public:

#ifdef OSGEARTH_HAVE_GEOS

        geos::geom::Geometry* encode( const FeatureGeometry& input, const FilterContext& context );

        bool decode( geos::geom::Geometry* input, FeatureGeometry& output, const FilterContext& context );

#endif // OSGEARTH_HAVE_GEOS

    };
}

#endif // OSGEARTHFEATURES_FEATURE_OP_FILTER_H

