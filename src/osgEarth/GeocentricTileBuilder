#ifndef OSGEARTH_TILE_GENERATOR_H
#define OSGEARTH_TILE_GENERATOR_H 1

#include <osgEarth/Common>
#include <osgEarth/PlateCarre>
#include <osg/Node>

namespace osgEarth
{
    class GeocentricTileBuilder
    {
    public:
        GeocentricTileBuilder(
            PlateCarreTileSource* image_source,
            PlateCarreTileSource* field_source );

        osg::Node* create( const PlateCarreCellKey& qk );
        
    private:
        osg::Node* createQuadrant( const PlateCarreCellKey& qk );

    private:
        osg::ref_ptr<PlateCarreTileSource> image_source;
        osg::ref_ptr<PlateCarreTileSource> field_source;
        bool make_dem;
    };
}

#endif // OSGEARTH_TILE_GENERATOR_H