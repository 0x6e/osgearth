#ifndef OSGEARTH_COMPOSITING_H
#define OSGEARTH_COMPOSITING_H 1

#include <osg/Referenced>
#include <osg/Image>
#include <osg/MixinVector>
#include <osgEarth/Common>
#include <osgEarth/SpatialReference>
#include <osgEarth/TileKey>
#include <osgEarth/TileSource>

#include <vector>

namespace osgEarth
{
    /**
     * Image paired with a spatial reference.
     */
    template<class T>
    class OSGEARTH_EXPORT GeoObject : public osg::Referenced
    {
    public:
        GeoObject( T* image, const SpatialReference* srs );

    public:
        T* get() const;

        const SpatialReference* getSRS() const;

    private:
        osg::ref_ptr<T> _image;
        osg::ref_ptr<const SpatialReference> _srs;
    };

    typedef GeoObject<osg::Image> GeoImage;
    typedef GeoObject<osg::HeightField> GeoHeightField;


    /**
     * Set of images paired with a spatial reference.
     */
    template<typename T>
    class OSGEARTH_EXPORT GeoObjects : public osg::MixinVector< osg::ref_ptr<T> >
    {
    public:
        GeoObjects( const SpatialReference* srs );

        const SpatialReference* getSRS() const;

    private:
        osg::ref_ptr<const SpatialReference> _srs;
    };

    typedef GeoObjects<osg::Image> GeoImages;
    typedef GeoObjects<osg::HeightField> GeoHeightFields;


    struct TileImage
    {
        /**
        *Constructor
        */
        TileImage(osg::Image* image, const TileKey* key);

        /**
        *Gets a reference to the Image held by this GeoImage
        */
        osg::Image* getImage() {return _image.get();}

        osg::ref_ptr<osg::Image> _image;       
        double _minX, _minY, _maxX, _maxY;
        unsigned int _tileX;
        unsigned int _tileY;
    };

    /**
     * Utility class for extracting a single image from a collection of image tiles
     */
    class MultiImage : public osg::Referenced
    {
    public:
        MultiImage();

        /**
        *Extracts an image with the given extents
        */
        osg::Image* createImage(double minx, double miny, double maxx, double maxy);

        /** A list of GeoImages */
        typedef std::vector<TileImage> TileImageList;

        /** Gets the images for this MultiImage */
        TileImageList& getImages() {return _images;}

    protected:
        void getExtents(double &minX, double &minY, double &maxX, double &maxY);

        ~MultiImage();
        TileImageList _images;
    };


    class OSGEARTH_EXPORT Compositor
    {
    public:
        Compositor();

        osg::Image* mosaicImages( const TileKey* key, TileSource* source ) const;

        osg::HeightField* compositeHeightFields( const TileKey* key, TileSource* source ) const;
    };
}

#endif // OSGEARTH_COMPOSITING_H
