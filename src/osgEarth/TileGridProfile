#ifndef OSGEARTH_TILE_GRID_PROFILE_H
#define OSGEARTH_TILE_GRID_PROFILE_H 1

#include <osgEarth/Common>

namespace osgEarth
{
    class OSGEARTH_EXPORT TileGridProfile
    {
    public:
        TileGridProfile( double xmin, double ymin, double xmax, double ymax, int px_width );

        TileGridProfile( const TileGridProfile& rhs );

        double xMin() const;
        double yMin() const;
        double xMax() const;
        double yMax() const;
        int    pixelsPerTile() const;

    private:
        double xmin, ymin, xmax, ymax;
        int px_width;
    };
}

#endif // OSGEARTH_TILE_GRID_PROFILE_H