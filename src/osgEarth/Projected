#ifndef OSGEARTH_PROJECTED_H
#define OSGEARTH_PROJECTED_H 1

#include <osgEarth/Common>
#include <osgEarth/TileKey>
#include <osg/Image>
#include <osg/Shape>
#include <string>

namespace osgEarth
{
    class OSGEARTH_EXPORT ProjectedTileKey : public osgEarth::TileKey
    {
    public:
        static const std::string TYPE_CODE;

        ProjectedTileKey( const ProjectedTileKey &rhs);

        ProjectedTileKey( const std::string key_string, const TileGridProfile& profile );

    public: //overrides

        TileKey* getSubkey( unsigned int quadrant ) const;

        TileKey* createParentKey() const;

        bool getGeoExtents(
            double& out_min_lon,
            double& out_min_lat,
            double& out_max_lon,
            double& out_max_lat ) const;

        std::string getTypeCode() const { return TYPE_CODE; }

    private:
        osg::ref_ptr<ProjectedTileKey> subkeys[4];
    };
}

#endif //OSGEARTH_PROJECTED_H