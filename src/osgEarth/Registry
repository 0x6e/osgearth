#ifndef OSGEARTH_REGISTRY
#define OSGEARTH_REGISTRY 1

#include <osgEarth/Common>
#include <osgEarth/MapConfig>

#include <osg/Referenced>

namespace osgEarth
{
  class OSGEARTH_EXPORT Registry : public osg::Referenced
  {
  public:
    static Registry* instance();

    const CacheConfig* getCacheConfigOverride() { return _cacheConfigOverride.get(); }
    void setCacheConfigOverride(CacheConfig* cacheConfig) { _cacheConfigOverride = cacheConfig; }
    
  protected:
    virtual ~Registry();
    Registry();

    osg::ref_ptr<CacheConfig> _cacheConfigOverride;
  };
}

#endif //OSGEARTH_REGISTRY