#ifndef OSGEARTH_TEXTURE_COMPOSITOR_TEX3D_H
#define OSGEARTH_TEXTURE_COMPOSITOR_TEX3D_H 1

#include <osgEarth/TextureCompositor>

namespace osgEarth
{
    /**
     * TODO: document
     */
    class TextureCompositorTex3D : public TextureCompositorTechnique
    {
    public:
        osg::StateSet* createStateSet( const GeoImageVector& layerImages, const GeoExtent& outputExtent ) const;

        void updateGlobalStateSet( osg::StateSet* stateSet, int numImageLayers ) const;

        bool requiresUnitTextureSpace() const { return true; }

        bool usesShaderComposition() const { return true; }
    };
}

#endif // OSGEARTH_TEXTURE_COMPOSITOR_TEX3D_H
