#ifndef OSGEARTH_PROJECTED_TILE_BUILDER_H
#define OSGEARTH_PROJECTED_TILE_BUILDER_H 1

#include <osgEarth/Common>
#include <osgEarth/TileBuilder>

namespace osgEarth
{
    //note: no export (package internal)
    /**
     * This tile builder creates tiles in a flat projection.  It handles both typical projected
     * coordinate systems like UTM as well as the "Geographic" projection, which
     * is really a simple flat projection in which x=long, y=lat.
     */
    class ProjectedTileBuilder : public TileBuilder
    {
    public:
        ProjectedTileBuilder( 
            MapConfig* map, 
            const osgDB::ReaderWriter::Options* options =NULL);
        
    protected: // TileBuilder interface

        //bool addChildren( osg::Group* parent, const TileKey* key );

        osg::Node* createQuadrant( const TileKey* key );

        osg::CoordinateSystemNode* createCoordinateSystemNode() const;

    protected:
        /**
         * Scales the given heightfield's elevation values from meters to degrees
         * @param hf
         *     The heightfield to scale
         */
        static void scaleHeightFieldToDegrees(osg::HeightField* hf);
    };
}

#endif // OSGEARTH_PROJECTED_TILE_BUILDER_H