#include <osgEarth/Export>

#include <osg/Image>
#include <osg/Shape>

namespace osgEarth
{
    class OSGEARTH_EXPORT ImageToHeightFieldConverter
    {
    public:
        static osg::HeightField* convert(osg::Image* image, float scaleFactor = 1.0f); 
    };
}

#endif //OSGEARTH_IMAGE_TO_HEIGHTFIELD_CONVERTER