#ifndef OSGEARTHSYMBOLOGY_MESH_SUBDIVIDER
#define OSGEARTHSYMBOLOGY_MESH_SUBDIVIDER

#include <osgEarthSymbology/Common>
#include <osg/Geometry>

namespace osgEarth { namespace Symbology
{
    class OSGEARTHSYMBOLOGY_EXPORT MeshSubdivider
    {
    public:
        MeshSubdivider(
            const osg::Matrixd& refMatrix   =osg::Matrixd::identity(),
            const osg::Matrixd& invRefMatrx =osg::Matrixd::identity() );

        void run(double granurality, osg::Geometry* geom);

        void run(
            double granularity_radians,
            osg::ref_ptr<osg::Vec3Array> in_out_verts,
            osg::ref_ptr<osg::DrawElementsUInt> in_out_indicies );

    protected:
        osg::Matrixd _refMatrix, _invRefMatrix;
        bool _useRefs;
    };

} } // namespace osgEarth::Symbology

#endif // OSGEARTHSYMBOLOGY_MESH_SUBDIVIDER
