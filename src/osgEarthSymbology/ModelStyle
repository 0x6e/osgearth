#ifndef OSGEARTHSYMBOLOGY_MODEL_STYLE_H
#define OSGEARTHSYMBOLOGY_MODEL_STYLE_H 1

#include <osgEarthSymbology/Common>
#include <osgEarthSymbology/Style>
#include <vector>

namespace osgEarth { namespace Symbology 
{
    /**
     * A Style is a named collection of Symbols.
     */
    class OSGEARTHSYMBOLOGY_EXPORT ModelStyle : public Style
    {
    public:
        ModelStyle();
        ModelStyle(const ModelStyle&, const osg::CopyOp&);
        META_Object(osgEarthSymbology, ModelStyle);

        const std::string& getModel() const { return _model; }
        void setModel(const std::string& model) { _model = model; }

    protected:
        std::string _model;
    };

} } // namespace osgEarth::Symbology


#endif // OSGEARTHSYMBOLOGY_STYLE_H

