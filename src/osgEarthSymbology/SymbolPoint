#ifndef OSGEARTHSYMBOLOGY_SYMBOLPOINT_H
#define OSGEARTHSYMBOLOGY_SYMBOLPOINT_H 1

#include <osgEarthSymbology/Symbol>
#include <osg/Vec4>
#include <string>

namespace osgEarth { namespace Symbology
{
    /**
     * Abstract base class for all Symbol types.
     */
    class OSGEARTHSYMBOLOGY_EXPORT SymbolPoint : public Symbol
    {
    public:
        SymbolPoint() {}

        virtual Type getType() const { return POINT; }

        void setColor(const osg::Vec4& color) { _color = color; }
        const osg::Vec4& getColor() const { return _color; }

        void setGeometry(const std::string& geometry) { _geometry = geometry; }
        const std::string& getGeometry() const { return _geometry; }

    protected:

        osg::Vec4 _color;
        std::string _geometry;

    };



} } // namespace osgEarth::Symbology

#endif // OSGEARTH_SYMBOLOGY_SYMBOL_H
