#ifndef OSGEARTHSYMBOLOGY_STYLE_H
#define OSGEARTHSYMBOLOGY_STYLE_H 1

#include <osgEarthSymbology/Common>
#include <osgEarthSymbology/Symbol>
#include <vector>

namespace osgEarth { namespace Symbology 
{
    /**
     * A Style is a named collection of Symbols.
     */
    class OSGEARTHSYMBOLOGY_EXPORT Style
    {
    public:
        Style();

        PointSymbol& getPoint() { return _point; }
        const PointSymbol& getPoint() const { return _point; }

        LineSymbol& getLine() { return _line; }
        const LineSymbol& getLine() const { return _line; }

        /** Style information for polygon elements. */
        PolygonSymbol& getPolygon() { return _polygon; }
        const PolygonSymbol& getPolygon() const { return _polygon; }

        /** Style information for text elements. */
        TextSymbol& getText() { return _text; }
        const TextSymbol& getText() const { return _text; }

    protected:
        PolygonSymbol _polygon;
        TextSymbol    _text;
        PointSymbol   _point;
        LineSymbol    _line;
    };

} } // namespace osgEarth::Symbology


#endif // OSGEARTHSYMBOLOGY_STYLE_H

