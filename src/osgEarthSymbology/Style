#ifndef OSGEARTHSYMBOLOGY_STYLE_H
#define OSGEARTHSYMBOLOGY_STYLE_H 1

#include <osgEarthSymbology/Common>
#include <osgEarthSymbology/Symbol>
#include <vector>

using namespace osgEarth;

namespace osgEarth { namespace Symbology 
{
    /**
     * A Style is a named collection of Symbols.
     */
    class OSGEARTHSYMBOLOGY_EXPORT Style
    {
    public:
        Style();

        void addSymbol( Symbol* symbol ) { _symbols.push_back(symbol); }

    protected:
        SymbolList _symbols;
    };

} } // namespace osgEarth::Symbology


#endif // OSGEARTHSYMBOLOGY_STYLE_H

