#ifndef OSGEARTHSYMBOLOGY_WINDOWMANAGER_H
#define OSGEARTHSYMBOLOGY_WINDOWMANAGER_H 1

#include <osgEarthSymbology/Common>
#include <osgEarthSymbology/WidgetMessageBox>
#include <osgWidget/WindowManager>
#include <osgViewer/Viewer>

namespace osgEarth { namespace Symbology
{

    class OSGEARTHSYMBOLOGY_EXPORT WindowManager : public osg::Referenced
    {
    public:
        WindowManager(osgViewer::Viewer&);
        void popUp(WidgetMessageBox& msg);
        osgWidget::WindowManager* getWindowManager() { return _windowManager.get(); }
    protected:
        osg::ref_ptr<osgWidget::WindowManager> _windowManager;
    };

}}

#endif
