#ifndef OSGEARTHSYMBOLOGY_TEXT_MARKUP_H
#define OSGEARTHSYMBOLOGY_TEXT_MARKUP_H 1

#include <osgEarthSymbology/Common>
#include <osgEarthSymbology/Text>

namespace osgEarth { namespace Symbology
{
    /**
     * A symbolizer that generates text geometry with multiple styles. You can use
     * this to create markup text blocks. Create a stylesheet with 
     */
    class OSGEARTHSYMBOLOGY_EXPORT CompositeTextSymbolizer : public Symbolizer< State<TextContent> >
    {
    public:
        CompositeTextSymbolizer();

    public: // Symbolizer

        virtual bool compile(
            State<TextContent>* state,
            osg::Group*         attachPoint);
    };

} } // namespace osgEarth::Symbology

#endif // OSGEARTHSYMBOLOGY_TEXT_MARKUP_H
