#ifndef OSGEARTH_ENGINE_QUAD_TILE_NODE
#define OSGEARTH_ENGINE_QUAD_TILE_NODE 1

#include "Common"
#include "CustomTile"
#include <osg/Group>

/**
 * A scene graph node that holds a terrain tile (as the single child of its
 * osg::Group) and can load subtiles when they come into LOD range.
 */
class QuadTileNode : public osg::Group
{
public:
    QuadTileNode();

    /** Sets the camera range at which this node becomes active. */
    void setRange( float range ) { _range = range; }

    /** Whether this node (or its children) is ready for display. */
    bool isActive() const { return getNumChildren() > 0; }

public:
    void traverse( osg::NodeVisitor& nv );

protected:
    float _range;
    double _timestamp;
    osg::ref_ptr<QuadTileNode> _children[4];
};

#endif // OSGEARTH_ENGINE_QUAD_TILE_NODE
