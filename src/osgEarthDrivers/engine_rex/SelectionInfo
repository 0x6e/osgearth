#ifndef OSGEARTH_DRIVERS_REX_TERRAIN_ENGINE_SELECTION_INFO
#define OSGEARTH_DRIVERS_REX_TERRAIN_ENGINE_SELECTION_INFO 1

#include "Common"
#include <vector>


namespace osgEarth { namespace Drivers { namespace RexTerrainEngine
{
    class SelectionInfo
    {
    public:
        size_t                    _numLods;          // Number of LODs
        std::pair<size_t, size_t> _uiGridDimensions; // Dimensions of the skeleton grid
        size_t                    _uiLODForMorphing; // LOD at which morphing should start
        double                    _fMorphStartRatio; // Morph start ratio
    };
}
}
}
#endif