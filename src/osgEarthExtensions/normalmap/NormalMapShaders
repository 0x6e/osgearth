#ifndef OSGEARTH_NORMALMAP_SHADERS
#define OSGEARTH_NORMALMAP_SHADERS 1

#undef  MULTILINE
#define MULTILINE(...) #__VA_ARGS__
namespace
{
//---------------------------------------------------------
const char* NormalMapFragmentShader = MULTILINE(

#version 110\n

vec3 oe_global_Normal; \n

uniform sampler2D oe_nmap_tex; \n
uniform float oe_nmap_intensity; \n
uniform float oe_nmap_scale; \n

varying vec4 oe_layer_tilec; \n

void oe_nmap_fragment(inout vec4 color) \n
{ \n
    vec3 bump = normalize(texture2D(oe_nmap_tex, oe_layer_tilec.st*oe_nmap_scale).xyz * 2.0 - 1.0); \n
    oe_global_Normal = normalize(oe_global_Normal + bump*oe_nmap_intensity); \n
} \n


);
}

#endif // OSGEARTH_NormalMap_NOISE_SHADERS
