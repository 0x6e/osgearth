#ifndef OSGEARTHUTIL_FEATURE_FACTORY
#define OSGEARTHUTIL_FEATURE_FACTORY

#include <osgEarthUtil/Common>
#include <osgEarthFeatures/Feature>
#include <osgEarth/Utils>
#include <osgEarth/Map>

/**
 * A collection of utilities for creating geometric features
 */
namespace osgEarth { namespace Util
{
    using namespace osgEarth;
    using namespace osgEarth::Features;

    class OSGEARTHUTIL_EXPORT FeatureFactory
    {
    public:
        /**
         * Constructs the factory.
         * @param map If you provide a map, geometries will be in the coordinate system of that map.
         */
        FeatureFactory( const Map* map );

        /**
         * Creates a circle geometry.
         * @param center Center point (must be in map SRS if a map was provided in ctor)
         * @param radius Circle radius
         * @param numSegments Number of circumference segments, or zero to automatically calculate it
         */
        Feature* createCircle( 
            const osg::Vec3d& center,
            const Linear&     radius,
            unsigned          numSegments =0);

    protected:
        osg::ref_ptr<const Map> _map;
    };

} } // namespace osgEarth::Util

#endif // OSGEARTHUTIL_FEATURE_FACTORY
