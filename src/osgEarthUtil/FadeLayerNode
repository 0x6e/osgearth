#ifndef OSGEARTHUTIL_FADELAYERNODE
#define OSGEARTHUTIL_FADELAYERNODE

#include <osg/Group>

#include <osgEarth/MapNode>

#include <osgEarthUtil/Common>


namespace osgEarthUtil
{
    class OSGEARTHUTIL_EXPORT FadeLayerNode : public osg::Group
    {
    public:
        FadeLayerNode(osgEarth::MapNode* map);
        float getOpacity(unsigned int layer) const;
        void setOpacity(unsigned int layer, float opacity);

        bool getEnabled(unsigned int layer) const;
        void setEnabled(unsigned int layer, bool enabled);

        osgEarth::MapNode* getMapNode() { return _mapNode.get(); }

        virtual void traverse(osg::NodeVisitor& nv);

        virtual void layerAdded(unsigned int index);
        virtual void layerRemoved(unsigned int index);
        virtual void layerMoved(unsigned int prevIndex, unsigned int newIndex);
    protected:

        friend struct Callback;

        struct Callback : public osgEarth::MapNode::SourceCallback
        {
        public:
            Callback(FadeLayerNode* fadeLayerNode):
              _fadeLayerNode(fadeLayerNode)
            {
            }

            virtual void imageSourceAdded(osgEarth::TileSource* source, unsigned int index) { _fadeLayerNode->layerAdded(index);}
            virtual void imageSourceRemoved(osgEarth::TileSource* source, unsigned int index) { _fadeLayerNode->layerRemoved(index);}
            virtual void imageSourceMoved(osgEarth::TileSource* source, unsigned int prevIndex, unsigned int newIndex) { _fadeLayerNode->layerMoved(prevIndex, newIndex);}

            osg::observer_ptr<FadeLayerNode> _fadeLayerNode;
        };

        void resizeLists(unsigned int max);

        typedef std::vector<float> OpacityList;
        OpacityList _opacity;

        typedef std::vector<bool> EnabledList;
        EnabledList _enabled;

        void updateStateSet();

        osg::ref_ptr<osgEarth::MapNode> _mapNode;

        osg::ref_ptr<Callback> _callback;
    };
}

#endif //OSGEARTHUTIL_FADELAYERNODE