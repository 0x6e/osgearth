#ifndef OSGEARTHUTIL_LABELING
#define OSGEARTHUTIL_LABELING

#include <osgEarthUtil/Common>
#include <osgEarthSymbology/Text>
#include <osg/Drawable>
#include <osg/Vec3d>
#include <osgViewer/View>
#include <osgAnimation/EaseMotion>
#include <osgWidget/Frame>
#include <osgWidget/WindowManager>


namespace osgEarthUtil
{
    /**
     * Creates a styled text label.
     */
    class OSGEARTHUTIL_EXPORT LabelMaker
    {
    public:
        LabelMaker( const osgEarth::Symbology::TextSymbol* defaultSymbol =0L );

        /**
         * Creates a text label.
         */
        osg::Drawable* create2dLabel(
            const std::string& text,
            const osg::Vec3d&  position =osg::Vec3d(0,0,0),
            const osgEarth::Symbology::TextSymbol*  symbol   =0L );

    protected:
        osg::ref_ptr<const osgEarth::Symbology::TextSymbol> _defaultSymbol;
    };

} // namespace osgEarthUtil

#endif // OSGEARTHUTIL_LABELING
