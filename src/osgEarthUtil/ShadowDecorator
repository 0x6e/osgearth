#ifndef OSGEARTH_UTIL_SHADOW_DECORATOR_H
#define OSGEARTH_UTIL_SHADOW_DECORATOR_H

#include <osgEarthUtil/Common>

#if OSG_MIN_VERSION_REQUIRED(2,9,10)

#include <osgEarth/TerrainEngineNode>
#include <osgShadow/ShadowedScene>
#include <osg/Light>

namespace osgEarth { namespace Util
{
    using namespace osgEarth;

    class OSGEARTHUTIL_EXPORT ShadowDecorator : public osgEarth::TerrainDecorator
    {
    public:
        ShadowDecorator();


        void setLight( osg::Light* light );

    public: // TerrainDecorator interface
        
        virtual void onInstall( TerrainEngineNode* engine );

        virtual void onUninstall( TerrainEngineNode* engine );

    public: // osg::Node

        virtual void traverse( osg::NodeVisitor& nv );

    private:

        osg::ref_ptr<osgShadow::ShadowedScene> _scene;
        osg::ref_ptr<osg::Light>               _light;
    };

} } // namespace osgEarth::Util


#endif // OSGEARTH_MIN_VERSION_REQUIRED(2,9,10)

#endif // OSGEARTH_UTIL_SHADOW_DECORATOR_H
