#ifndef OSGEARTHSIM_DISLISTENER_H
#define OSGEARTHSIM_DISLISTENER_H 1

#include <osgEarthSim/Common>

#include <OpenThreads/Thread>

#include "KDIS/Extras/DIS_Logger_Record.h"
#include "KDIS/Network/Connection.h" // A cross platform connection class.
#include "KDIS/Extras/PDU_Factory.h"
#include "KDIS/PDU/Entity_Info_Interaction/Entity_State_PDU.h"



namespace osgEarth { namespace Sim {

    using namespace KDIS;
    using namespace DATA_TYPE;
    using namespace PDU;
    using namespace ENUMS;
    using namespace UTILS;
    using namespace NETWORK;


    class OSGEARTHSIM_EXPORT DISListener  : public OpenThreads::Thread
    {       
    public:
        DISListener();
        virtual ~DISListener();

        virtual void run();      

        virtual int cancel();      

        virtual void onEntityStateChanged( Entity_State_PDU* entityState );

    private:

        volatile bool _done;
    };

}}

#endif //OSGEARTHSIM_DISLISTENER_H