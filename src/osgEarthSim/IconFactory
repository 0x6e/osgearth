#ifndef OSGEARTHSIM_ICONFACTORY_H
#define OSGEARTHSIM_ICONFACTORY_H 1

#include <osgEarthSim/Common>

#include <osg/Image>

#include <KDIS/DataTypes/Enums/EnumEntityInfoInteraction.h>

using namespace KDIS::DATA_TYPE::ENUMS;

namespace osgEarth { namespace Sim {

    class OSGEARTHSIM_EXPORT IconFactory : public osg::Referenced
    {
    public:
        IconFactory(); 
        IconFactory(int iconSize,
                    const std::string& friendly,
                    const std::string& opposing,
                    const std::string& neutral,
                    const std::string& unknown
                    ); 

        int getIconSize() const;        

        osg::Image* getIcon(ForceID forceId );

    private:

        void load( const std::string& friendly,
                   const std::string& opposing,
                   const std::string& neutral,
                   const std::string& unknown);

        int _iconSize;

        osg::ref_ptr< osg::Image > _friendly;
        osg::ref_ptr< osg::Image > _opposing;
        osg::ref_ptr< osg::Image > _neutral;
        osg::ref_ptr< osg::Image > _unknown;        
    };
}}

#endif //OSGEARTHSIM_ICONFACTORY_H