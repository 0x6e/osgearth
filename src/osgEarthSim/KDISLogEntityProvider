#ifndef OSGEARTHSIM_KDISLOGENTITYPROVIDER_H
#define OSGEARTHSIM_KDISLOGENTITYPROVIDER_H 1

#include <osgEarthSim/Common>

#include <osgEarthSim/EntityProvider>
#include <OpenThreads/Thread>

#include "KDIS/Extras/DIS_Logger_Playback.h"
#include "KDIS/Extras/PDU_Factory.h"
#include "KDIS/PDU/Entity_Info_Interaction/Entity_State_PDU.h"



namespace osgEarth { namespace Sim {

    using namespace KDIS;
    using namespace DATA_TYPE;
    using namespace PDU;
    using namespace ENUMS;
    using namespace UTILS;    


    class OSGEARTHSIM_EXPORT KDISLogEntityProvider  : public EntityProvider, public OpenThreads::Thread
    {       
    public:
        KDISLogEntityProvider(const std::string &filename="Log.txt");
        virtual ~KDISLogEntityProvider();

        virtual void startImplementation();
        virtual void stopImplementation();

        bool getLoop() const { return _loop;}
        void setLoop( bool loop) { _loop = loop; }

        const std::string& getFilename() const { return _filename; }

        virtual void run();      
        virtual int cancel();              

    private:

        std::string _filename;        
        volatile bool _done;
        bool _loop;
    };

}}

#endif //OSGEARTHSIM_KDISLOGENTITYPROVIDER_H