#ifndef OSGEARTH_ANNOTATION_SCALE_DRAW_STATE_H
#define OSGEARTH_ANNOTATION_SCALE_DRAW_STATE_H 1

#include <osgEarthAnnotation/DrawState>
#include <osg/NodeVisitor>

namespace osgEarth { namespace Annotation
{	
    using namespace osgEarth;

    /**
     * A draw state technique that scales the annotation.
     */
    class /*OSGEARTHANNO_EXPORT*/ ScaleDrawState : public InjectionDrawState
    {
    public:
        ScaleDrawState(float factor =1.1f) :
            InjectionDrawState(new osg::MatrixTransform(osg::Matrix::scale(factor,factor,factor))),
            _factor(factor) { }

        virtual DrawState* clone() const { return new ScaleDrawState(_factor); }

    protected:
        float _factor;
    };

} } // namespace osgEarth::Annotation

#endif //OSGEARTH_ANNOTATION_DRAW_STATE_H
