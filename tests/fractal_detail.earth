<!-- 
osgEarth Sample - Fractal detail
Uses the noise driver to add fractal detail to the terrain, making it appear higher resolution than it really is.
This can be useful for presentation purposes when you don't have very high resolution data.
-->

<map version="2">
    
    <image name="mapquest_open_aerial" driver="xyz">
        <url>http://oatile[1234].mqcdn.com/tiles/1.0.0/sat/{z}/{x}/{y}.jpg</url>
        <profile>spherical-mercator</profile>
        <cache_policy usage="no_cache"/>
        <nodata_image>http://oatile3.mqcdn.com/tiles/1.0.0/sat/13/636/6210.jpg</nodata_image>
    </image>    
    
    <!-- Add the ReadyMap elevation -->
    <elevation name="readymap_elevation" driver="tms">
        <url>http://readymap.org/readymap/tiles/1.0.0/9/</url>
    </elevation>
    
    <!--
    Add the noise elevation data.
    Setting the offset to true will cause the values generated by this driver to be 
    added to the resulting heightfield instead of replacing them.
     -->
    <elevation driver="noise" name="noise" offset="true">
        <!--
        Specify the min/max elevation so that it doesn't change the elevation too drastically
        -->
        <min_elevation>0</min_elevation>
        <max_elevation>20</max_elevation>
        
        <!-- Increase the number of octaves to add more detail -->
        <octaves>20</octaves>   

        <!-- Increase the frequency so that subtle changes in noise input produce more varied results -->        
        <frequency>500</frequency>
    </elevation>
    
    <options>
       <terrain>
          <min_lod>20</min_lod>
       </terrain>
    </options>
</map>
