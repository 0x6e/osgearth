#ifndef SEAMLESS_GEOPATCH
#define SEAMLESS_GEOPATCH 1
// Patch subclass for the Geographic (whole earth) patch
// implementation.

#include <seamless/Patch>
namespace seamless
{
class GeoPatch : public Patch
{
public:
    GeoPatch();
    GeoPatch(const GeoPatch& rhs,
             const osg::CopyOp& copyop = osg::CopyOp::SHALLOW_COPY);

    META_Node(seamless, GeoPatch);

    virtual float getEdgeError(const osg::Vec3& eye, int edge);
    // An edge length (the square root of the patch area)
    // used for the LOD calculation.
    void setEdgeLength(float edgeLength) { _edgeLength = edgeLength; }
    float getEdgeLength() const { return _edgeLength; }
protected:
    float _edgeLength;
};

}
#endif
